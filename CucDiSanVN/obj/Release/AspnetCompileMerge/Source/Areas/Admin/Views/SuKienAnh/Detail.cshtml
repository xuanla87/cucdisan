@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model  CucDiSanVN.Areas.Admin.Models.modelSuKienAnh
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Admin</a></li>
        <li><a href="/Admin/SuKienAnh">Danh sách sự kiện ảnh</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Tiêu đề", new { @class = "control-lable" })
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Nhập tiêu đề.." })
                                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Chuyên mục", new { @class = "control-lable" })
                                    @Html.DropDownListFor(x => x.ParentId, null, "---Chọn chuyên mục---", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ParentId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Link", new { @class = "control-lable" })
                                    @Html.TextBoxFor(x => x.Note, new { @class = "form-control", @placeholder = "Nhập link.." })
                                    @Html.ValidationMessageFor(x => x.Note, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("Hình ảnh", new { @class = "control-lable" })
                                    @Html.TextBoxFor(x => x.Img, new { @class = "form-control", @placeholder = "Chọn ảnh.." })
                                    @Html.ValidationMessageFor(x => x.Img, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.Label("Thứ tự", new { @class = "control-lable" })
                                    @Html.TextBoxFor(x => x.Sort, new { @class = "form-control number", @placeholder = "Nhập số.." })
                                </div>
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2">
                                </div>
                                @Html.HiddenFor(x => x.Alias)
                                @Html.HiddenFor(x => x.Id)
                                @Html.HiddenFor(x => x.LanguageId)
                                <div class="col-md-2 text-right">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
