@{
    /**/

    int _languageId = (int)ViewBag.LanguageId;
}
@if (_languageId == 1)
{
    <div class="language" title="English">
        <img src="../Content/english.png" alt="language" width="16" />
    </div>
}
else
{
    <div class="language" title="Vietnamese">
        <img src="../Content/vietnamese.png" alt="language" width="16" />
    </div>
}