@{
    int count = 0;
}
@model IEnumerable<CucDiSanService.Models.Content>

@if (Model != null && Model.Count() > 0)
{
    foreach (var item in Model)
    {
        count++;
        if (count == 1)
        {
            <div class="item active">
                <a href="@item.note">
                    <img src="@item.contentThumbnail" alt="@item.contentName" />
                </a>
                <div class="title">
                    @item.contentName
                </div>
            </div>
        }
        else
        {
            <div class="item">
                <a href="@item.note">
                    <img src="@item.contentThumbnail" alt="@item.contentName" />
                </a>
                <div class="title">
                    @item.contentName
                </div>
            </div>
        }
    }
}