@{
    int count = 0;
}
@model IEnumerable<CucDiSanService.Models.Content>
@if (Model != null && Model.Count() > 0)
{
    <div id="BoxSuKien" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @*@foreach (var item in Model)
                {
                    @Html.Action("suKienQuaAnhItem", "Home", new { Id = item.contentId })
                }*@
            @foreach (var item in Model)
            {
                count++;
                if (count == 1)
                {
                    <div class="item active">
                        <a href="@item.note">
                            <img src="@item.contentThumbnail" alt="@item.contentName">
                        
                        <div class="title">
                            @item.contentName
                        </div>
						</a>
                    </div>
                }
                else
                {
                    <div class="item">
                        <a href="@item.note">
                            <img src="@item.contentThumbnail" alt="@item.contentName">
                       
                        <div class="title">
                            @item.contentName
                        </div>
						 </a>
                    </div>
                }
            }
        </div>
        <a class="left carousel-control" href="#BoxSuKien" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#BoxSuKien" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

