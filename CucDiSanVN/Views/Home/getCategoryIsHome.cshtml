@{
    /**/

    List<Content> _list = (List<Content>)ViewBag.ListNew;
    int count = 0;
}
@using CucDiSanService.Models
@model IEnumerable<Content>
@if (Model != null && Model.Count() > 0)
{
    foreach (var item in Model)
    {
        count++;
        if (count == 1)
        {
            <div class="item tin-mb">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-12">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(item.contentThumbnail))
                            {
                                <img alt="@item.contentName" src="@item.contentThumbnail" />
                            }
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-8 col-xs-12 col-sm-12">
                        <div class="text">
                            <div class="title">
                                <div class="title2">
                                    <a title="@item.contentName" href="@item.contentAlias">@item.contentName <em>Mới</em></a>
                                </div>
                            </div>
                            @Html.Action("getContentInCategoryHomeId", "Home", new { Id = item.contentId, Total = 5 })
                        </div>
                        <div class="read-more">
                            <a title="@item.contentName" href="@item.contentAlias">Xem tiếp >>>></a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="item">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-12">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(item.contentThumbnail))
                            {
                                <img alt="@item.contentName" src="@item.contentThumbnail" />
                            }
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-8 col-xs-12 col-sm-12">
                        <div class="text">
                            <div class="title">
                                <div class="title2">
                                    <a title="@item.contentName" href="@item.contentAlias">@item.contentName <em>Mới</em></a>
                                </div>
                            </div>
                            @Html.Action("getContentInCategoryHomeId", "Home", new { Id = item.contentId, Total = 5 })
                        </div>
                        <div class="read-more">
                            <a title="@item.contentName" href="@item.contentAlias">Xem tiếp >>>></a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
}
