@model List<CucDiSanService.Models.Content>
@if (Model != null && Model.Count() > 0)
{
    <div id="BoxHinhAnh" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <div class="item active">
                        <a href="@Model[i].note">
                            <img src="@Model[i].contentThumbnail" alt="@Model[i].contentName">
                        </a>
                    </div>
                }
                else
                {
                    <div class="item">
                        <a href="@Model[i].note">
                            <img src="@Model[i].contentThumbnail" alt="@Model[i].contentName">
                        </a>
                    </div>
                }
            }
        </div>
        <a class="left carousel-control" href="#BoxHinhAnh" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#BoxHinhAnh" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
    <a href="/su-kien-hinh-anh">Xem tất cả</a>
}


